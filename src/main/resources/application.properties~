spring.application.name=Workouts-MicroService
spring.datasource.url=jdbc:postgresql://${WORKOUTS-HOSTNAME}.frankfurt-postgres.render.com/workoutsdb_don
spring.datasource.username=${WORKOUTS-USERNAME}
spring.datasource.password=${WORKOUTS-PASSWORD}

server.error.include-message=always
spring.jackson.mapper.default-view-inclusion=true

spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.sql.init.mode=always
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.properties.hibernate.globally_quoted_identifiers=false